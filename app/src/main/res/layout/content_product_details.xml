    <Button
        android:id="@+id/btEnquirePrice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Enquire Price"
        android:textColor="#fff"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btBuyNow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Contact Seller"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/tvWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Press only if you are interested in buying the product)"
        android:layout_below="@+id/btBuyNow"
        android:gravity="center"
        android:padding="5dp"
        />

    <View
        android:id="@+id/viewProductDetails"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tvWarning"
        android:layout_marginTop="5dp"
        android:background="#BDBDBD" />
