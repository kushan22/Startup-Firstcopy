<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="@color/light_greenish"
    >

<LinearLayout
    android:id="@+id/llChooseAddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <CheckBox
        android:id="@+id/cbAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            />
        <TextView
            android:id="@+id/tvShippingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address comes here"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="left"
            android:textColor="#000"
            />


        <TextView
            android:id="@+id/tvShippingCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="left"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvShippingState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="left"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvShippingPincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pincode"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="left"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvAddressPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="left"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tvAddressProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="left"
            android:textColor="#000"
            />

    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>