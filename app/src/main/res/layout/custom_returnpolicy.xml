<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svReturnPolicy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <ImageButton
        android:id="@+id/ibCloseReturnPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/ic_close_black_24dp"
        android:background="@android:color/transparent"
        />

    <View
        android:id="@+id/viewReturnPolicy"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ibCloseReturnPolicy"
        android:background="@color/black_alpha_40"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_below="@+id/viewReturnPolicy"
       android:layout_marginTop="5dp"
       >

       <TextView
           android:id="@+id/tvReturnPolicyHeading"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Return Policy"
           android:gravity="center"
           android:textSize="22sp"
           android:padding="5dp"
           android:textColor="@color/colorPrimary"
           />



       <TextView
           android:id="@+id/tvReturnPolicyContent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/return_policy"
           android:textSize="16sp"
           android:padding="5dp"
           android:gravity="left"
           />



   </LinearLayout>


</RelativeLayout>
</ScrollView>